# Telegram Bot Token (получите у @BotFather)
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Local Bot API Server (для файлов >20 MB)
# Получите на https://my.telegram.org
TELEGRAM_API_ID=YOUR_API_ID
TELEGRAM_API_HASH=YOUR_API_HASH

# Использовать локальный Bot API Server (true/false)
USE_LOCAL_API=true

# URL локального Bot API Server (не меняйте если используете docker-compose)
LOCAL_API_URL=http://telegram-bot-api:8081

# Максимальный размер файла в МБ (до 2000 MB с Local API)
MAX_FILE_SIZE_MB=2000

# Интервал автоочистки временных файлов (в минутах)
CLEANUP_INTERVAL_MINUTES=30

# Максимальный возраст временных файлов для удаления (в часах)
TEMP_FILE_MAX_AGE_HOURS=2
